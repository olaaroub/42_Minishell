    12	
    13	CC = cc
    14	CFLAGS = -Wall -Wextra -Werror
    15	CFLAGS += -fsanitize=address -g3
    16	
    17	SRC = src_parsing/main.c src_parsing/get_env.c src_parsing/trash.c src_parsing/split_mgem7a.c
    18	SRC += src_parsing/tokenizing.c src_parsing/tokens_list.c src_parsing/check_line.c src_parsing/utils-v1.c
    19	SRC += src_parsing/syntax_error.c src_parsing/expand_v2.c src_parsing/split_after_expand.c
    20	SRC += src_parsing/fill_command_list.c src_parsing/command_list.c
    21	SRC += $(wildcard builtins/*.c)
    22	SRC += $(wildcard src_execution/*.c)
    23	
    24	#=== PRINTF_FD ===#
    25	SRC += $(wildcard libft/ft_printf/*.c)
    26	
    27	OBJ = $(SRC:.c=.o)
    28	
    29	NAME = minishell_1
    30	LIB = libft/libft.a
    31	
    32	all:  $(NAME)
    33	
    34	$(NAME): $(OBJ) $(LIB)
    35		$(CC) $(CFLAGS) $(OBJ) $(LIB)  -lreadline -o $(NAME)
    36	#	make clean
    37	
    38	$(LIB):
    39		$(MAKE) -C libft
    40	
    41	clean:
    42		@rm -rf $(OBJ)
    43		$(MAKE) clean -C libft
    44	
    45	fclean: clean
    46		@rm -rf $(NAME)
    47		$(MAKE) fclean -C libft
    48	
    49	re: fclean all
    50	
    51	.PHONY: clean fclean re all bonus
    52	.SECONDARY: $(OBJ)
